{
  "name": "micro-frontend-demo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "main-app",
    "app1"
  ],
  "scripts": {
    "start": "concurrently \"npm run start:main\" \"npm run start:app1\"",
    "start:main": "cd main-app && npm start",
    "start:app1": "cd app1 && npm start",
    "install:all": "npm install && npm run install:main && npm run install:app1",
    "install:main": "cd main-app && npm install",
    "install:app1": "cd app1 && npm install",
    "build": "concurrently \"npm run build:main-app\" \"npm run build:app1\"",
    "build:main": "cd main-app && npm run build",
    "build:app1": "cd app1 && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 